<h2>Comments</h2>
<div class="comment-section">
    @if (Model.Comments != null && Model.Comments.Any())
    {
        @foreach (var comment in Model.Comments)
        {
            <div class="comment-box">
                <div class="comment-header">@comment.UserName</div> <!-- Display the username of the commenter -->
                <div class="comment-text">@comment.Text</div> <!-- Display the comment text -->
            </div>
        }
    }
    else
    {
        <p>No comments yet.</p>
    }
</div>

<form asp-action="Create2" asp-controller="UserComments">
